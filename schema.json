{
    "version": "1.0",
    "settings": {
        "fontfamily": [
            "Calibri"
        ]
    },
    "inputs": [
        {
            "name": "welcomemsg",
            "type": "textbox",
            "label": "Welcome message",
            "placeholder": "Enter message...",
            "visible": true,
            "options": {}
        },
        {
            "name": "clicktostart",
            "type": "textbox",
            "label": "Clict to begin message",
            "placeholder": "Enter message...",
            "visible": true,
            "options": {}
        },
        {
            "name": "bgImage",
            "label": "Customize the background",
            "type": "background",
            "options": {
                "palette": [
                    "#ffffff",
                    "#000000"
                ],
                "defaultcolor": "#ffffff",
                "showcolor": true,
                "showimage": true,
                "dropText": "Drop a media file (image, mp4) here or "
            },
            "validation": {
                "fileextensions": [
                    ".jpg",
                    ".png",
                    ".bmp",
                    ".jpeg",
                    ".svg",
                    ".gif",
                    ".mp4"
                ]
            }
        },
        {
            "name": "uuid",
